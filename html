<script>
  // data quotes
  const quotes = [
    "Kamu itu ibarat WiFi ‚Äî kalau ada kamu, hatiku langsung connect.",
    "Kalau rindu bisa dimakan, aku takut gendut gara-gara kamu.",
    "Niatnya mau kuat, tapi tiap lihat kamu kok lemah.",
    "Kamu bukan mimpi, tapi tiap malam aku tetep kangen.",
    "Diam-diam sayang, rame-rame galau.",
    "Kalau cinta itu buta, aku senang karena kamu tetap aku lihat.",
    "Kamu kecil? Tapi bisa bikin hati besar."
  ];

  const preview = document.getElementById('quote');
  const authorEl = document.getElementById('quoteAuthor');
  const custom = document.getElementById('custom');
  const preset = document.getElementById('preset');
  const authorInput = document.getElementById('author');

  document.getElementById('generate').addEventListener('click', ()=>{
    const p = preset.value.trim();
    const c = custom.value.trim();
    const text = c || p || quotes[Math.floor(Math.random()*quotes.length)];
    updatePreview(text, authorInput.value.trim() || 'kamu ‚ô¶');
  });

  document.getElementById('surprise').addEventListener('click', ()=>{
    const r = quotes[Math.floor(Math.random()*quotes.length)];
    custom.value = r;
    preset.value = '';
    updatePreview(r, authorInput.value.trim() || 'kamu ‚ô¶');
  });

  document.getElementById('reset').addEventListener('click', ()=>{
    custom.value=''; preset.value=''; authorInput.value=''; updatePreview('Tekan \"Buat Kata Bucin\" untuk melihat pratinjau di sini üíå','‚Äî kamu');
  });

  function updatePreview(text, author){
    preview.textContent = text;
    authorEl.textContent = author.startsWith('‚Äî')?author:('‚Äî ' + author);
  }

  // copy to clipboard
  document.getElementById('copyBtn').addEventListener('click', async ()=>{
    const t = preview.textContent.trim() + " " + authorEl.textContent.trim();
    try{
      await navigator.clipboard.writeText(t);
      alert('Tersalin: ' + t.slice(0,80) + (t.length>80?'...':''));
    }catch(e){
      alert('Gagal menyalin ‚Äî coba manual.');
    }
  });

  // share: create URL with params (no server)
  document.getElementById('shareBtn').addEventListener('click', ()=>{
    const params = new URLSearchParams();
    params.set('q', preview.textContent);
    params.set('a', authorInput.value || 'kamu');
    const url = location.origin + location.pathname + '?' + params.toString();
    // try using navigator.share if available
    if(navigator.share){
      navigator.share({title:'Kata Bucin untukmu', text: preview.textContent, url})
        .catch(()=>{ prompt('Salin URL ini:', url); });
    }else{
      prompt('Salin URL ini untuk dibagikan:', url);
    }
  });

  // simple client-side "download as PNG" using HTML2Canvas-like method
  // We'll use a simple approach: draw text onto canvas (no external libs)
  document.getElementById('downloadBtn').addEventListener('click', ()=>{
    const text = preview.textContent;
    const author = authorEl.textContent;
    const padding = 36;
    const width = 900;
    const canvas = document.createElement('canvas');
    canvas.width = width;
    canvas.height = 480;
    const ctx = canvas.getContext('2d');

    // background
    const g = ctx.createLinearGradient(0,0,width,0);
    g.addColorStop(0, '#ff9a9e');
    g.addColorStop(1, '#fad0c4');
    ctx.fillStyle = g;
    ctx.fillRect(0,0,canvas.width,canvas.height);

    // white rounded box
    ctx.fillStyle = 'rgba(255,255,255,0.95)';
    roundRect(ctx, padding, padding, width-2*padding, canvas.height-2*padding, 20, true, false);

    // quote text
    ctx.fillStyle = '#222';
    ctx.font = '700 28px Arial';
    wrapText(ctx, text, padding+30, 140, width - 2*(padding+30), 34);

    ctx.font = '600 18px Arial';
    ctx.fillStyle = '#555';
    ctx.fillText(author, padding+30, canvas.height-80);

    const dataURL = canvas.toDataURL('image/png');
    const a = document.createElement('a');
    a.href = dataURL;
    a.download = 'kata-bucin.png';
    a.click();
  });

  function roundRect(ctx, x, y, width, height, radius, fill, stroke){
    if(typeof radius === 'undefined') radius = 5;
    ctx.beginPath();
    ctx.moveTo(x + radius, y);
    ctx.arcTo(x + width, y, x + width, y + height, radius);
    ctx.arcTo(x + width, y + height, x, y + height, radius);
    ctx.arcTo(x, y + height, x, y, radius);
    ctx.arcTo(x, y, x + width, y, radius);
    ctx.closePath();
    if(fill) ctx.fill();
    if(stroke) ctx.stroke();
  }

  function wrapText(ctx, text, x, y, maxWidth, lineHeight){
    const words = text.split(' ');
    let line = '';
    for(let n=0;n<words.length;n++){
      const testLine = line + words[n] + ' ';
      const metrics = ctx.measureText(testLine);
      const testWidth = metrics.width;
      if(testWidth > maxWidth && n > 0){
        ctx.fillText(line, x, y);
        line = words[n] + ' ';
        y += lineHeight;
      }else{
        line = testLine;
      }
    }
    ctx.fillText(line, x, y);
  }

  // check url params for shared quote
  (function(){
    const params = new URLSearchParams(location.search);
    if(params.has('q')){
      const q = params.get('q');
      const a = params.get('a') || 'kamu';
      preview.textContent = q;
      authorEl.textContent = '‚Äî ' + a;
      custom.value = q;
      authorInput.value = a;
    }
  })();

</script>
</body>
</html>
